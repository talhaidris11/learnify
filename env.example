# Environment Variables for Learnify
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# JWT Secret (change this to a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# MongoDB Connection String
# For local development: mongodb://localhost:27017/learnify
# For production: mongodb+srv://username:password@cluster.mongodb.net/learnify
MONGODB_URI=mongodb://localhost:27017/learnify

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com 